echo_message "Starting installation... Please wait."

# Update and install dependencies
sudo apt update -y
sudo apt install -y curl software-properties-common git
curl -fsSL https://deb.nodesource.com/setup_20.x | sudo -E bash -
sudo apt install -y nodejs

# Clone SkyportD
echo_message "Downloading SkyportD..."
git clone https://github.com/achul123/skyportd.git

cd skyportd
echo_message "Installing Node.js dependencies..."
